<h1>Listing People</h1>

<table class="table table-condensed table-bordered table-hover">
  <thead>
    <tr>
      <th><%= link_to 'New Person', new_person_path %></th>
      <th>First name</th>
      <th>Last name</th>
      <th>Title</th>
      <th>Linked in</th>
      <th>Email</th>
      <th>Phone</th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= link_to 'Show', person %></td>
        <td><%= person.first_name %></td>
        <td><%= person.last_name %></td>
        <td><%= person.title %></td>
        <td><%= person.linked_in %></td>
        <td><%= person.email %></td>
        <td><%= person.phone %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @people %>
